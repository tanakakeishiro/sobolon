{
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.useProjectFiles": true,
  "github.copilot.chat.localeOverride": "ja",
  
  // Git コミット関連設定
  "git.enableSmartCommit": true,
  "git.suggestSmartCommit": false,
  "git.verboseCommit": true,
  "scm.inputFontSize": 13,
  "scm.inputFontFamily": "Consolas, 'Courier New', monospace",
  
  // GitHub Copilot のコミット生成設定
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4.1",
    "inlineSuggest.count": 3
  },
  
  // コンテキストファイルの自動参照設定
  "github.copilot.chat.experimental.contextFiles": [
    ".github/instructions/global.instructions.md",
    ".github/instructions/css.instructions.md",
    ".github/instructions/figma.instructions.md",
    ".github/instructions/img.instructions.md",
    ".github/instructions/commit.instructions.md"
  ],
  
  // ファイル監視除外設定
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true
  },
  
  // ファイル関連付け
  "files.associations": {
    "*.instructions.md": "markdown",
    "commit.instructions.md": "markdown"
  },
  
  // Git コミットテンプレート設定
  "git.inputValidation": true,
  "git.inputValidationLength": 50,
  "git.inputValidationSubjectLength": 50
}